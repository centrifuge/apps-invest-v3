{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ESNext",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client"],
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@cfg": ["src/cfg/index"],
      "@components/*": ["src/components/*"],
      "@contexts/*": ["src/contexts/*"],
      "@forms": ["src/forms/index"],
      "@hooks/*": ["src/hooks/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@routes/*": ["src/routes/*"],
      "@ui": ["src/ui/index"],
      "@utils/*": ["src/utils/*"],
      "@wallet": ["src/wallet/index"]
    }
  },
  "include": ["src", "vite-env.d.ts", "vite.config.ts"]
}
